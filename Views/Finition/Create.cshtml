@using Net_P5.ViewModels
@model FinitionViewModel
@using Net_P5.Data
@inject ApplicationDbContext DbContext
@using Microsoft.EntityFrameworkCore

@{
    ViewData["Title"] = "Ajouter une finition";
}

<div class="container">
    <div class="row mb-5">
        <div class="col-4 offset-4">
            <div class="text-center mb-5">
                <div class="titre mb-2">Ajouter une finition</div>
                <div class="soustitre">tous les champs sont obligatoires</div>
            </div>

            <form asp-controller="Finition" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="FinitionNom" class="form-label">Nom de la finition</label>
                    <input asp-for="FinitionNom" class="form-control border-dark">
                    <span asp-validation-for="FinitionNom" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">À quelle modèle appartient cette finition ?</label>
                    <div class="d-flex flex-column flex-lg-row">
                        <select asp-for="ModeleId" class="form-select border-dark mb-2 mb-md-0 flex-md-grow-1" required style="border-top-right-radius: 0.375rem; border-bottom-right-radius: 0.375rem;">
                            <option value="" disabled selected>Sélectionnez un modèle</option>
                            @foreach (var modele in ViewBag.Modeles)
                            {
                                <option value="@modele.Id">@modele.Nom</option>
                            }
                        </select>
                    </div>
                    <span asp-validation-for="ModeleId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Créer</button>
                </div>
            </form>

        </div>
    </div>
</div>