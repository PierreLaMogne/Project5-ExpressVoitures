@model VoitureViewModel
@using Net_P5.Data
@using Net_P5.ViewModels
@inject ApplicationDbContext DbContext
@using Microsoft.EntityFrameworkCore

@{
    ViewData["Title"] = "Modifier une voiture";
}

<div class="container">
    <div class="row mb-5">
        <div class="col-4 offset-4">
            <div class="text-center mb-5">
                <div class="titre mb-2">Modifier une voiture</div>
                <div class="soustitre">seules la date de vente et la photo de la voiture ne sont pas obligatoires</div>
            </div>
            <form asp-controller="Voiture" asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="CodeVIN" class="form-label">Code VIN du véhicule</label>
                    <input asp-for="CodeVIN" class="form-control border-dark">
                    <span asp-validation-for="CodeVIN" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Annee" class="form-label">Année</label>
                    <input asp-for="Annee" class="form-control border-dark">
                    <span asp-validation-for="Annee" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label class="form-label">Marque</label>
                    <div class="d-flex flex-column flex-lg-row">
                        <select asp-for="MarqueId" class="form-select border-dark mb-2 mb-md-0 flex-md-grow-1" required 
                            style="border-top-right-radius: 0.375rem; border-bottom-right-radius: 0.375rem;">
                            <option value="" disabled selected>Sélectionnez une marque</option>
                            @foreach (var marque in ViewBag.Marques)
                            {
                                <option value="@marque.Id">@marque.Nom</option>
                            }
                        </select>
                        <div class="btn-group dropend" role="group">
                            <button class="btn btn-primary dropdown-toggle p-2 w-100" type="button" data-bs-toggle="dropdown" 
                                aria-expanded="false" style="min-width: 170px;">
                                Gérer les marques
                            </button>
                            <ul class="dropdown-menu">
                                <a asp-controller="Marque" asp-action="Create" class="dropdown-item">Créer une marque</a>
                                <a asp-controller="Marque" asp-action="Index" class="dropdown-item">Modifier ou supprimer une marque</a>
                            </ul>
                        </div>
                    </div>
                    <span asp-validation-for="MarqueId" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Modèle</label>
                    <div class="d-flex flex-column flex-lg-row">
                        <select asp-for="ModeleId" class="form-select border-dark mb-2 mb-md-0 flex-md-grow-1" required
                            style="border-top-right-radius: 0.375rem; border-bottom-right-radius: 0.375rem;">
                            <option value="" disabled selected>Sélectionnez un modèle</option>
                            @foreach (var modele in ViewBag.Modeles)
                            {
                                <option value="@modele.Id">@modele.Nom</option>
                            }
                        </select>
                        <div class="btn-group dropend" role="group">
                            <button class="btn btn-primary dropdown-toggle p-2 w-100" type="button" data-bs-toggle="dropdown"
                                aria-expanded="false" style="min-width: 170px;">
                                Gérer les modèles
                            </button>
                            <ul class="dropdown-menu">
                                <a asp-controller="Modele" asp-action="Create" class="dropdown-item">Créer un modèle</a>
                                <a asp-controller="Modele" asp-action="Index" class="dropdown-item">Modifier ou supprimer un modèle</a>
                            </ul>
                        </div>
                    </div>
                    <span asp-validation-for="ModeleId" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Finition</label>
                    <div class="d-flex flex-column flex-lg-row">
                        <select asp-for="FinitionId" class="form-select border-dark mb-2 mb-md-0 flex-md-grow-1" required style="border-top-right-radius: 0.375rem; border-bottom-right-radius: 0.375rem;">
                            <option value="" disabled selected>Sélectionnez une finition</option>
                            @foreach (var finition in ViewBag.Finitions)
                            {
                                <option value="@finition.Id">@finition.Modele.Nom @finition.Nom</option>
                            }
                        </select>
                        <div class="btn-group dropend" role="group">
                            <button class="btn btn-primary dropdown-toggle p-2 w-100" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="min-width: 170px;">
                                Gérer les finitions
                            </button>
                            <ul class="dropdown-menu">
                                <a asp-controller="Finition" asp-action="Create" class="dropdown-item">Créer une finition</a>
                                <a asp-controller="Finition" asp-action="Index" class="dropdown-item">Modifier ou supprimer une finition</a>
                            </ul>
                        </div>
                    </div>
                    <span asp-validation-for="FinitionId" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="PrixAchat" class="form-label">Prix d'achat</label>
                    <input asp-for="PrixAchat" class="form-control border-dark">
                    <span asp-validation-for="PrixAchat" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DateAchat" class="form-label">Date d'achat'</label>
                    <input asp-for="DateAchat" type="date" min="1990-01-01" max="@DateTime.Today.AddYears(1)" class="form-control border-dark">
                    <span asp-validation-for="DateAchat" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label me-2">Mettre le véhicule en vente ?</label>
                    <div class="form-check form-check-inline">
                        <input asp-for="EnVente" type="radio" value="true" class="form-check-input" id="enVenteOui" />
                        <label class="formlabel" for="enVenteOui">Oui</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="EnVente" type="radio" value="false" class="form-check-input" id="enVenteNon" />
                        <label class="formlabel" for="enVenteNon">Non</label>
                    </div>
                    <span asp-validation-for="EnVente" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Detail" class="form-label">Détail des réparations</label>
                    <input asp-for="Detail" class="form-control border-dark">
                    <span asp-validation-for="Detail" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Cout" class="form-label">Coût des réparations</label>
                    <input asp-for="Cout" class="form-control border-dark">
                    <span asp-validation-for="Cout" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DateDisponibilite" class="form-label">Date de disponibilité</label>
                    <input asp-for="DateDisponibilite" type="date" min="1990-01-01" max="@DateTime.Today.AddYears(1)" class="form-control border-dark">
                    <span asp-validation-for="DateDisponibilite" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label me-2">Le véhicule a-t-il été vendu ?</label>
                    <div class="form-check form-check-inline">
                        <input asp-for="VoitureVendue" type="radio" value="true" class="form-check-input" id="voitureVendueOui" />
                        <label class="formlabel" for="voitureVendueOui">Oui</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="VoitureVendue" type="radio" value="false" class="form-check-input" id="voitureVendueNon" />
                        <label class="formlabel" for="voitureVendueNon">Non</label>
                    </div>
                    <span asp-validation-for="VoitureVendue" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DateVente" class="form-label">Date de vente</label>
                    <input asp-for="DateVente" type="date" min="1990-01-01" max="@DateTime.Today.AddYears(1)" class="form-control border-dark">
                    <span asp-validation-for="DateVente" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Photo" class="form-label mb-2">Photo de la voiture</label>
                    <div class="border border-dark rounded p-3">
                        <div class="file-upload-wrapper d-flex align-items-center">
                            <input asp-for="Photo" class="form-control d-none" type="file" accept="image/*" id="photoInput" />
                            <label for="photoInput" class="d-flex align-items-center w-100 p-2 label-focusable" tabindex="0" role="button">
                                <span class="border border-dark border-2 d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                                    <i class="bi bi-plus-lg"></i>
                                </span>
                                <span class="flex-grow-1 text-center fw-medium text-muted" id="photoLabel">
                                    @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                                    {
                                        <text>Modifier photo</text>
                                    }
                                    else
                                    {
                                        <text>Ajouter photo</text>
                                    }
                                </span>
                            </label>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                        {
                            <img src="@Model.PhotoUrl" id="photoPreview" class="img-fluid rounded mt-3" style="max-height: 200px;" alt="Photo actuelle" />
                        }
                    </div>
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <!--Affichage de la photo uploadée-->
    <script>
        document.getElementById('photoInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    // Créer ou mettre à jour l'aperçu
                    let preview = document.getElementById('photoPreview');
                    if (!preview) {
                        preview = document.createElement('img');
                        preview.id = 'photoPreview';
                        preview.className = 'img-fluid rounded mt-3';
                        preview.style.maxHeight = '200px';
                        document.querySelector('.file-upload-wrapper').parentElement.appendChild(preview);
                    }
                    preview.src = event.target.result;

                    // Mettre à jour le texte du label
                    document.getElementById('photoLabel').textContent = file.name;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>

    <!--Récupération du label select pour les asp-route-id des dropdowns-->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.manage-btn').forEach(btn => {
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    e.stopPropagation();

                    const fieldName = this.dataset.field;
                    const select = document.querySelector(`select[asp-for="${fieldName}"]`);
                    const idValue = select ? select.value : null;

                    if (!idValue) {
                        alert(`Veuillez sélectionner une ${fieldName.replace('Id', '').toLowerCase()} d'abord.`);
                        return;
                    }

                    const controller = this.dataset.controller;
                    const action = this.dataset.action || 'Edit';

                    window.location.href = `/${controller}/${action}?id=${idValue}`;
                });
            });
        });
    </script>
}