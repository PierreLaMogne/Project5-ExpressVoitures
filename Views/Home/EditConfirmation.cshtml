@{
    ViewData["Title"] = "Voiture modifiée";
}

@if (!User.IsInRole("Admin"))
{
    <div class="container">
        <div class="row">
            <div class="col-4 offset-4">
                <div class="text-center mb-5">
                    <div class="titre">Accès refusé</div>
                    <div class="soustitre">Vous n'êtes pas administrateur du site</div>
                </div>
            </div>
        </div>
    </div>
    return;
}

<div class="container">
    <div class="row">
        <div class="text-center">
           <div class="titre mb-2">@ViewBag.NomModifie</div>
           <div class="soustitre">a bien été modifiée</div>
           <div class="btn btn-primary mt-5">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Retour à l'accueil</a>
           </div>
        </div>
    </div>
</div>