@model Voiture
@using Net_P5.Data
@inject ApplicationDbContext DbContext
@using Microsoft.EntityFrameworkCore

@{
    ViewData["Title"] = "Ajouter une voiture";
    Layout = "~/Views/Shared/_LayoutCreate.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-4 offset-4">
            <div class="text-center mb-5"> 
                <span class="titre">Ajouter une voiture</span>
                <span class="soustitre">tous les champs sont obligatoires</span>
            </div>
            <form asp-controller="Voiture" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <div class="mb-3">
                    <label asp-for="CodeVIN" class="form-label">Code VIN du véhicule</label>
                    <input asp-for="CodeVIN" class="form-control border-dark">
                    <span asp-validation-for="CodeVIN" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PrixVente" class="form-label">Prix de vente</label>
                    <input asp-for="PrixVente" class="form-control border-dark">
                    <span asp-validation-for="PrixVente" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Annee" class="form-label">Année</label>
                    <input asp-for="Annee" class="form-control border-dark">
                    <span asp-validation-for="Annee" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Marque</label>
                    <select asp-for="MarqueId" class="form-select border-dark" required>
                        <option value="" disabled selected>Sélectionnez une marque</option>
                        @foreach (var marque in ViewBag.Marques)
                        {
                            <option value="@marque.Id">@marque.Nom</option>
                        }
                    </select>
                    <span asp-validation-for="MarqueId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Modèle</label>
                    <select asp-for="ModeleId" class="form-select border-dark" required>
                        <option value="" disabled selected>Sélectionnez un modèle</option>
                        @foreach (var modele in ViewBag.Modeles)
                        {
                            <option value="@modele.Id" data-marque="@modele.MarqueId">@modele.Nom</option>
                        }
                    </select>
                    <span asp-validation-for="ModeleId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Finition</label>
                    <select asp-for="FinitionId" class="form-select border-dark" required>
                        <option value="" disabled selected>Sélectionnez une finition</option>
                        @foreach (var finition in ViewBag.Finitions)
                        {
                            <option value="@finition.Id" data-modele="@finition.ModeleId">@finition.Nom</option>
                        }
                    </select>
                    <span asp-validation-for="FinitionId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Photo" class="form-label mb-2">Photo de la voiture</label>
                    <div class="border border-dark border-2 rounded p-3">
                        <div class="file-upload-wrapper d-flex align-items-center">
                            <input asp-for="Photo" class="form-control d-none" type="file" accept="image/*" id="photoInput" />
                            <label for="photoInput" class="d-flex align-items-center w-100 p-2">
                                <span class="border border-dark border-2 d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                                    <i class="bi bi-plus-lg"></i>
                                </span>
                                <span class="flex-grow-1 text-center fw-medium text-muted">Ajouter photo</span>
                            </label>
                        </div>
                    </div>
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Publier</button>
                </div>
            </form>
        </div>
    </div>
</div>
