@model IEnumerable<Net_P5.Models.Voiture>

@{
    ViewData["Title"] = "Accueil";
}

<div class="container">
    <div class="row mb-5">
        <div class="text-center">
            <h1 class="titre mb-3">Nos voitures</h1>
            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="Voiture" asp-action="Create" class="btn btn-primary">+ Ajouter une voiture</a>
            }
        </div>
    </div>
    <div class="row row-cols-1 row-cols-lg-2 g-4 mb-5" role="list" aria-label="Liste des voitures disponibles">
        @foreach (var item in Model)
        {
            <div class="col" role="listitem">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.CodeVIN" class="text-decoration-none card-link"
                    aria-label="Voir les détails de @item.Finition?.Modele?.Marque?.Nom @item.Finition?.Modele?.Nom @item.Finition?.Nom de @item.Annee à @item.PrixVente.ToString("C2")">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="row g-0 d-flex align-items-center">
                            <div class="col-8">
                                @if (!string.IsNullOrEmpty(item.PhotoUrl))
                                {
                                    <div class="ratio ratio-4x3 rounded-start-3 rounded-end-1">
                                        <img src="@item.PhotoUrl" 
                                             class="img-fluid w-100 h-100" 
                                             alt="Photo de @item.NomComplet"
                                             loading="lazy" />
                                    </div>
                                }
                                else
                                {
                                    <div class="ratio ratio-4x3 rounded-start-3 rounded-end-1">
                                        <img src="https://upload.wikimedia.org/wikipedia/commons/a/aa/Fiat500-pot-de-yaourt-av-byRundvald.jpg" 
                                             class="img-fluid w-100 h-100" 
                                             alt="Image par défaut d'une voiture"
                                             loading="lazy" />
                                    </div>
                                }
                            </div>
                            <div class="col-4">
                                <div class="card-body p-1">
                                    <div class="card-title mb-3" aria-label="Prix">@item.PrixVente.ToString("C2")</div>
                                    <ul class="list-unstyled mb-0">
                                        <li class="card-text mb-1">
                                            <span class="visually-hidden">Année :</span>
                                            @item.Annee
                                        </li>
                                        <li class="card-text mb-1">
                                            <span class="visually-hidden">Marque :</span>
                                            @item.Finition?.Modele?.Marque?.Nom
                                        </li>
                                        <li class="card-text mb-1">
                                            <span class="visually-hidden">Modèle :</span>
                                            @item.Finition?.Modele?.Nom
                                        </li>
                                        <li class="card-text mb-3">
                                            <span class="visually-hidden">Finition :</span>
                                            @item.Finition?.Nom
                                        </li>
                                        <li class="card-text fst-italic mb-1">
                                            <span class="visually-hidden">Statut :</span>
                                            <strong>@item.Statut</strong> 
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12 text-center py-5">
                <p role="status" aria-live="polite">Aucune voiture disponible pour le moment.</p>
            </div>
        </div>
    }
</div>
