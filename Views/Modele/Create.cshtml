@using Net_P5.ViewModels
@model ModeleViewModel
@using Net_P5.Data
@inject ApplicationDbContext DbContext
@using Microsoft.EntityFrameworkCore

@{
    ViewData["Title"] = "Ajouter un modèle";
}

<div class="container">
    <div class="row mb-5">
        <div class="col-4 offset-4">
            <div class="text-center mb-5">
                <h1 class="titre mb-2">Ajouter un modèle</h1>
                <h2 class="soustitre">tous les champs sont obligatoires</h2>
            </div>

            <form asp-controller="Modele" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="ModeleNom" class="form-label">Nom du modèle</label>
                    <input asp-for="ModeleNom" class="form-control border-dark">
                    <span asp-validation-for="ModeleNom" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">À quelle marque appartient ce modèle ?</label>
                    <div class="d-flex flex-column flex-lg-row">
                        <select asp-for="MarqueId" class="form-select border-dark mb-2 mb-md-0 flex-md-grow-1" required style="border-top-right-radius: 0.375rem; border-bottom-right-radius: 0.375rem;">
                            <option value="" disabled selected>Sélectionnez une marque</option>
                            @foreach (var marque in ViewBag.Marques)
                            {
                                <option value="@marque.Id">@marque.Nom</option>
                            }
                        </select>                       
                    </div>
                    <span asp-validation-for="MarqueId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Créer</button>
                </div>
            </form>

        </div>
    </div>
</div>
